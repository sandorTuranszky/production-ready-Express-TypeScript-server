{
  "name": "production-ready-express-typescript-server",
  "version": "1.6.3",
  "engines": {
    "node": ">=8.12.0"
  },
  "description": "Express.js and TypeScript server implementing production-ready error handling and logging following latest best practices",
  "main": "server.ts",
  "author": "RaceBets team",
  "license": "ISC",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "start": "ts-node dist/server.js",
    "build": "tsc -p .",
    "test:unit": "set NODE_ENV=test && jest --forceExit --coverage --verbose tests/unit",
    "test:int": "set NODE_ENV=test && jest --detectOpenHandles --forceExit tests/int",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "push-tags": "git push --tags origin"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "**/node_modules",
      "**/logs",
      "**/coverage"
    ]
  },
  "dependencies": {
    "@sentry/node": "5.10.2",
    "@types/app-root-path": "^1.2.4",
    "@types/cookie-parser": "^1.4.2",
    "@types/morgan": "^1.9.0",
    "app-root-path": "^2.2.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "boom": "^7.2.0",
    "config": "^2.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "2.8.5",
    "debug": "^4.1.1",
    "express": "4.17.3",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "morgan": "^1.10.0",
    "node-mailjet": "^3.3.1",
    "npm": "^6.14.4",
    "path": "^0.12.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@sentry/types": "^5.15.4",
    "@types/body-parser": "^1.19.0",
    "@types/boom": "^7.3.0",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "lint-staged": "^8.2.1",
    "nodemon": "1.18.3",
    "prettier": "^1.19.1",
    "supertest": "^3.4.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
